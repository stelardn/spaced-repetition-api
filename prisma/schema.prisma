generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lesson {
  id String @id @default(uuid())
  subject String
  theme String?
  tags String[]
  date DateTime
  revisions Revision[]
  course String?
  references String[]
}

model Revision {
  id String @id @default(uuid())
  date DateTime
  completed Boolean
  lessonId String @map("lesson_id")

  lesson Lesson @relation(fields: [lessonId], references: [id])
}